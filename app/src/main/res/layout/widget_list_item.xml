<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/widget_quote_pad"
        android:text="Quote"
        android:textSize="@dimen/widget_quote_size" />

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="@dimen/widget_quote_pad"
        android:paddingLeft="@dimen/widget_quote_pad"
        android:paddingRight="@dimen/widget_quote_pad"
        android:text="Author"
        android:textSize="@dimen/author_text"
        android:textStyle="bold" />
</LinearLayout>
